<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="teamrenaissance.foodbasket.user.DetailedEntryActivity" >
    <!--android:background="#53bbb4"-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imageDiv"
            android:orientation="vertical" >

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/entryImage"
                android:layout_centerHorizontal="true" />

        </LinearLayout>

        <TextView
            android:id="@+id/viewEntryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/imageDiv"
            android:text="Product Name"
            android:textSize="@dimen/text_size_field"
            android:layout_marginLeft="@dimen/text_side_margin"
            android:layout_marginRight="@dimen/text_side_margin"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewEntryName"
            android:textSize="@dimen/text_size_field"
            android:layout_marginLeft="@dimen/text_side_margin"
            android:layout_marginRight="@dimen/text_side_margin"
            android:layout_marginTop="5dp" />
        <!--android:textSize="30sp"-->
        <!--android:textColor="#ffffff"-->

        <TextView
            android:id="@+id/viewEntryCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_field"
            android:layout_marginLeft="@dimen/text_side_margin"
            android:layout_marginRight="@dimen/text_side_margin"
            android:layout_below="@+id/viewName"
            android:layout_marginTop="30dp"
            android:text="Category"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_field"
            android:layout_marginLeft="@dimen/text_side_margin"
            android:layout_marginRight="@dimen/text_side_margin"
            android:layout_below="@+id/viewEntryCategory"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/viewEntryCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_field"
            android:layout_marginLeft="@dimen/text_side_margin"
            android:layout_marginRight="@dimen/text_side_margin"
            android:layout_below="@+id/viewCategory"
            android:layout_marginTop="30dp"
            android:text="Capacity"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_field"
            android:layout_marginLeft="@dimen/text_side_margin"
            android:layout_marginRight="@dimen/text_side_margin"
            android:layout_below="@+id/viewEntryCapacity"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/viewEntryExpiryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_field"
            android:layout_marginLeft="@dimen/text_side_margin"
            android:layout_marginRight="@dimen/text_side_margin"
            android:layout_below="@+id/viewCapacity"
            android:layout_marginTop="30dp"
            android:text="Expiry Date"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewExpiryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_field"
            android:layout_marginLeft="@dimen/text_side_margin"
            android:layout_marginRight="@dimen/text_side_margin"
            android:layout_below="@+id/viewEntryExpiryDate"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/btn_Edit"
            android:textSize="@dimen/text_size_button"
            android:layout_marginLeft="@dimen/button_side_margin"
            android:layout_marginRight="@dimen/button_side_margin"
            android:layout_below="@+id/viewExpiryDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp" />
        <!--android:background="#ffffff"-->
        <!--android:textColor="#53bbb4"-->
        <!--android:textSize="30sp"-->

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/btn_Delete"
            android:layout_below="@+id/btn_Edit"
            android:textSize="@dimen/text_size_button"
            android:layout_marginLeft="@dimen/button_side_margin"
            android:layout_marginRight="@dimen/button_side_margin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/button_top_margin" />

    </RelativeLayout>
</ScrollView>
