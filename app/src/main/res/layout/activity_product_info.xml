<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="teamrenaissance.foodbasket.user.ProductInfoActivity" >
    <!--android:background="#53bbb4"-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imageDivProduct"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/productImage"
                android:layout_centerHorizontal="true" />

        </LinearLayout>

        <TextView
            android:id="@+id/productInfoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="@dimen/text_size_field"
            android:layout_marginLeft="@dimen/text_side_margin"
            android:layout_marginRight="@dimen/text_side_margin"
            android:layout_below="@+id/imageDivProduct"
            android:text="Product Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_field"
            android:layout_marginLeft="@dimen/text_side_margin"
            android:layout_marginRight="@dimen/text_side_margin"
            android:layout_below="@+id/productInfoName"
            android:layout_marginTop="5dp" />
        <!--android:textSize="30sp"-->
        <!--android:textColor="#ffffff"-->

        <TextView
            android:id="@+id/productInfoCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productName"
            android:textSize="@dimen/text_size_field"
            android:layout_marginLeft="@dimen/text_side_margin"
            android:layout_marginRight="@dimen/text_side_margin"
            android:layout_marginTop="30dp"
            android:text="Category"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productInfoCategory"
            android:textSize="@dimen/text_size_field"
            android:layout_marginLeft="@dimen/text_side_margin"
            android:layout_marginRight="@dimen/text_side_margin"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/productInfoCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productCategory"
            android:textSize="@dimen/text_size_field"
            android:layout_marginLeft="@dimen/text_side_margin"
            android:layout_marginRight="@dimen/text_side_margin"
            android:layout_marginTop="30dp"
            android:text="Capacity"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productInfoCapacity"
            android:textSize="@dimen/text_size_field"
            android:layout_marginLeft="@dimen/text_side_margin"
            android:layout_marginRight="@dimen/text_side_margin"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/btn_EditProduct"
            android:layout_below="@+id/productCapacity"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_button"
            android:layout_marginLeft="@dimen/button_side_margin"
            android:layout_marginRight="@dimen/button_side_margin"
            android:layout_marginTop="60dp" />
        <!--android:background="#ffffff"-->
        <!--android:textColor="#53bbb4"-->
        <!--android:textSize="30sp"-->

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/btn_SubmitProduct"
            android:layout_below="@+id/btn_EditProduct"
            android:textSize="@dimen/text_size_button"
            android:layout_marginLeft="@dimen/button_side_margin"
            android:layout_marginRight="@dimen/button_side_margin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/button_top_margin" />

    </RelativeLayout>
</ScrollView>
