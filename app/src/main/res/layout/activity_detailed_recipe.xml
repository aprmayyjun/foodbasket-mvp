<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="teamrenaissance.foodbasket.user.DetailedEntryActivity" >
    <!--android:background="#53bbb4"-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imageDiv_recipe" >

            <ProgressBar
                android:id="@+id/progressBar_recipe"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/recipeImage"
                android:layout_centerHorizontal="true" />

        </LinearLayout>

        <TextView
            android:id="@+id/viewRecipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/imageDiv_recipe"
            android:text="Recipe Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewRName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewRecipeName"
            android:layout_marginTop="5dp" />
        <!--android:textSize="30sp"-->
        <!--android:textColor="#ffffff"-->

        <TextView
            android:id="@+id/viewRecipeIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewRName"
            android:layout_marginTop="30dp"
            android:text="Ingredients"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewRIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewRecipeIngredients"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/viewRecipeRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewRIngredients"
            android:layout_marginTop="30dp"
            android:text="Rating"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewRRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewRecipeRating"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/viewRecipeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewRRating"
            android:layout_marginTop="30dp"
            android:text="Preparation Time"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewRTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewRecipeTime"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/viewRecipeYield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewRTime"
            android:layout_marginTop="30dp"
            android:text="Yield"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewRYield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewRecipeYield"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Recipe Website"
            android:id="@+id/btn_Recipe_Source"
            android:layout_below="@+id/viewRYield"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp" />
        <!--android:background="#ffffff"-->
        <!--android:textColor="#53bbb4"-->
        <!--android:textSize="30sp"-->

        <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Delete"-->
            <!--android:id="@+id/btn_Delete"-->
            <!--android:layout_below="@+id/btn_Edit"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="@dimen/button_top_margin" />-->

    </RelativeLayout>
</ScrollView>
